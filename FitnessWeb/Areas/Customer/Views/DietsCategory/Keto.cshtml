@model IEnumerable<Diet>
<style>
    .exercise-card {
        margin-bottom: 30px;
    }

        .exercise-card img {
            height: 200px;
            object-fit: cover;
        }

        .exercise-card .card-title,
        .exercise-card .card-text {
            color: white;
        }

</style>
<div class="row pb-2">
    @foreach (var diet in Model)
    {
        if (diet.DietsCategory.CategoryName=="Dieta Ketogeniczna")
        {
            
                <div class="col-lg-4 col-md-6 exercise-card">
                    <div class="card h-100 card border-0 p-3 shadow border-top border-5 rounded">
                            <img src="@diet.ImageUrl" class="card-img-top rounded">
                            <div class="card-body pb-0">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@diet.DietName</p>
                                </div>
                                <div class="text-center">
                                    <a asp-action="Details"
                                       asp-route-dietId="@diet.Id" class="btn btn-primary bg-gradient border-0 form control">
                                Szczegóły
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                
            
        }
        
    }
</div>
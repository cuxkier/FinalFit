@model IEnumerable<Fitness.Models.Progress>

@{
    ViewData["Title"] = "Progress Journal";
}

<h2>Dziennik postępu</h2>

<table class="table">
    <thead>
        <tr>
            <th>Data wpisu</th>
            <th>Waga</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Weight</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Add" class="btn btn-primary">Dodaj nowy wpis</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

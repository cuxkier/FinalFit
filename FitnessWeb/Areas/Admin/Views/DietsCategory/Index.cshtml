@model List<DietsCategory>

<div class="container">
    <div class=" row pt-4 pb-2">
        <div class=" col-6">
            <h2 class="text-dark">
                Diet Category
            </h2>
        </div>
        <div class=" col-6 text-end">
            <a asp-controller="DietsCategory" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-journal-plus"></i> Dodaj nową kategorię
            </a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Kolejność wyświetlania
        </th>
        <th>
            Rodzaj diety
        </th>
        <th>

        </th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
        <tr>
            <td>@obj.DisplayOrder</td>
            <td>
            @obj.CategoryName
            </td>
            <td>
            <div class="w-75 btn-group" role="group">
                <a asp-controller="DietsCategory" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-controller="DietsCategory" asp-action="Delete" asp-route-Id="@obj.Id"  class="btn btn-danger mx-2">
                    <i class="bi bi-trash3"></i> Delete
                </a>
            </div>
            </td>
        </tr>
        }
    </tbody>
</table>
</div>
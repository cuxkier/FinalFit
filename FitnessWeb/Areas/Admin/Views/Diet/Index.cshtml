@model List<Diet>

<div class="container">
    <div class=" row pt-4 pb-2">
        <div class=" col-6">
            <h2 class="text-dark">
                Nazwa diety
            </h2>
        </div>
        <div class=" col-6 text-end">
            <a asp-controller="Diet" asp-action="Upsert" class="btn btn-primary">
            <i class="bi bi-journal-plus"></i> Dodaj dietę
            </a>
        </div>
    </div>

    <table id="tblData" class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Dieta</th>
                <th>Rodzaj diety</th>
                <th>Kaloryczność</th>
                <th>Opis</th>
                <th>Cena</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/diet.js"></script>
}